    "version": "0.2.0",
    "configurations": [
        {
            "name": "Product Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/codebase/Webservices/Product/bin/Debug/netcoreapp2.2/product.dll",
            "args": [],
            "cwd": "${workspaceFolder}/codebase/webservices/product",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
